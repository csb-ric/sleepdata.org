- @title = @tag.name

- content_for :banner do
  .banner
    .container
      .banner-header.brand
        = link_to 'Tags', tags_path
        &middot;
        = @title
      .banner-body
        = link_to 'Edit Tag', edit_tag_path(@tag), class: 'btn btn-xs btn-default'
        = link_to 'Delete Tag', @tag, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Tag #{@tag.name}?" }

%dl.dl-horizontal
  %dt Color
  %dd
    %span.label{ style: "line-height: 20px; background-color: #{@tag.color}" }
      = @tag.color

  %dt Type
  %dd= @tag.type_name

  %dt Creator
  %dd= link_to @tag.user.name, @tag.user if @tag.user
