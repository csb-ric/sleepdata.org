- @title = @tag.name

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = render "layouts/edit_delete_dropdown", edit_url: edit_tag_path(@tag), delete_url: @tag, delete_confirmation: "Delete #{@tag.name}?"
        = @title
  .breadcrumb-container.mb-0
    .container
      .pull-right
        %span.label.label-default{ style: "background-color: #{@tag.color};" }
          = @tag.name
      %ol
        %li= link_to "Tags", tags_path

.dashboard-container
  %table.table.table-striped.table-borderless.table-hover
    %col{ width: "25%" }
    %col{ width: "75%" }
    %tbody
      %tr
        %th.text-right Name
        %td= @tag.name

      %tr
        %th.text-right Color
        %td
          %span.label.label-default{ style: "background-color: #{@tag.color};" }
            = @tag.color

      %tr
        %th.text-right Type
        %td= @tag.type_name
