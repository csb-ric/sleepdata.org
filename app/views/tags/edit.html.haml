- @title = "Edit Tag - #{@tag.name_was}"

- content_for :header, @tag.name_was
= render "internal/tabs"
- content_for :breadcrumbs do
  .float-right
    %span.badge.badge-dark{ style: "background-color: #{@tag.color};" }
      = @tag.name_was
  %ol
    %li= link_to "tags", tags_path
    %li= link_to @tag.name_was.downcase, @tag
    %li.breadcrumb-muted edit
- content_for :sidebar, render("admin/sidebar")

.dashboard-container= render "tags/form", tag: @tag
