- @title = "Edit Tag: #{@tag.name_was}"

- content_for :body_class do
  brand-background

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        = @tag.name_was
  .breadcrumb-container.mb-0
    .container
      %ol
        %li= link_to 'Tags', tags_path
        %li= link_to @tag.name_was, @tag
        %li Edit

.dashboard-container
  = render 'form'
