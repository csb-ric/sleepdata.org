= render 'contour/layouts/per_page', per_page: 40, object_count: @tags.total_count

%table.table.table-striped
  %thead
    %tr
      = th_sort_field @order, 'tags.name', 'Name'
      = th_sort_field @order, 'tags.color', 'Color'
      = th_sort_field @order, 'tags.tag_type', 'Type'
      = th_sort_field @order, 'tags.user_id', 'Creator'
      %th Actions

  - @tags.each do |tag|
    %tr
      %td= link_to tag.name, tag
      %td
        %span.label{ style: "background-color:#{tag.color}" }= tag.color
      %td= tag.type_name
      %td= link_to tag.user.name, tag.user if tag.user
      %td
        = link_to 'Edit', edit_tag_path(tag), class: 'btn btn-xs btn-default'
        = link_to 'Delete', tag, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Tag #{tag.name}?" }

.center= paginate @tags, theme: 'contour'
