<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @tool, html: { class: 'form-horizontal' } do |f| %>
  <% if @tool.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@tool.errors.count, "error") %> prohibited this tool from being saved</h4>

      <ul>
      <% @tool.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :slug, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :slug, class: 'form-control' %>
      <div class="bs-callout bs-callout-info">
        <h4>Naming convention</h4>

        <ul>
          <li>Must be a lowercase letter <code>a-z</code> followed by lowercase letters <code>a-z</code>, numbers<code>0-9</code>, or dashes<code>-</code>.</li>
        </ul>
        Ex: <code>abc123-program</code>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :logo, 'Logo (JPG, GIF, PNG)', class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.file_field :logo, class: 'form-control' %>
      <%= f.hidden_field :logo_cache %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :tool_type, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.select :tool_type, [['---', nil]] + Tool::TYPE, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>
  </div>
<% end %>
