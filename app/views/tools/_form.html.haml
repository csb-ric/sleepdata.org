= form_for @tool, html: { class: 'form-horizontal' } do |f|
  - if @tool.errors.any?
    .callout.callout-danger
      %strong
        = pluralize @tool.errors.count, 'error'
        prohibited this tool from being saved

      %ul
        - @tool.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :description, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_area :description, rows: 7, class: 'form-control'

  .form-group
    = f.label :slug, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :slug, class: 'form-control'
      .callout.callout-info
        %strong Naming convention

        %ul
          %li
            Must be a lowercase letter
            %code a-z
            followed by lowercase letters
            = succeed ',' do
              %code a-z
            numbers
            = succeed ',' do
              %code 0-9
            or dashes
            = succeed '.' do
              %code -
        %p
          Ex:
          %code abc123-program

  .form-group
    = f.label :logo, 'Logo (JPG, GIF, PNG)', class: 'col-md-2 control-label'
    .col-md-10
      = f.file_field :logo, class: 'form-control'
      = f.hidden_field :logo_cache

  .form-group
    = f.label :git_repository, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :git_repository, class: 'form-control'
      .callout.callout-info
        %strong Repository must be Public
        %ul
          %li The repository must be publicly accessible.
        %p
          Ex:
          %code https://github.com/&lt;repository-name&gt;.git

  .form-group
    .col-md-offset-2.col-md-10
      .checkbox
        %label
          = f.check_box :public
          Public

  .form-group
    = f.label :tool_type, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.select :tool_type, [['---', nil]] + Tool::TYPE, {}, class: 'form-control'

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: 'btn btn-primary'
      = cancel
