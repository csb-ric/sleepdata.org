<% @title = "Requests - #{@tool.name}" %>

<%= render partial: 'tools/header' %>

<div class="row">
  <div class="col-sm-9" style="margin-bottom:20px">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>DAUA</th>
            <th>User</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>

        <% @tool.tool_users.order(:id).sort{|a,b| [b.editor.to_s, b.approved.to_s, a.user.last_name, a.user.first_name] <=> [a.editor.to_s, a.approved.to_s, b.user.last_name, b.user.first_name]}.each do |tool_user| %>
          <tr class="<%= 'warning' if params[:tool_user_id].to_i == tool_user.id %>">
            <td>
              <% agreement = tool_user.user.agreements.first %>
              <% if agreement %>
                <%= status_helper(agreement) %>
                <%= link_to '<span class="glyphicon glyphicon-share-alt"></span>'.html_safe, agreement if current_user.system_admin? %>
              <% end %>
            </td>
            <td><%= image_tag tool_user.user.avatar_url(18), style: 'vertical-align:text-bottom;min-width:18px' %> <%= tool_user.user.name %></td>
            <td><%= tool_user.editor? ? 'Editor' : 'Viewer' %></td>
            <td>
              <% if tool_user.approved == nil %>
                <span class="text-muted">Requested</span>
              <% elsif tool_user.approved == true %>
                <span class="text-success">Approved</span>
              <% else %>
                <span class="text-danger">Denied</span>
              <% end %>
            </td>
            <td style="white-space:nowrap">
              <%= link_to 'Approve',     set_access_tool_path( @tool, tool_user_id: tool_user.id, approved: true, editor: tool_user.editor ), method: :patch,   class: 'btn btn-default btn-xs' %>
              <%= link_to 'Deny',        set_access_tool_path( @tool, tool_user_id: tool_user.id, approved: false, editor: tool_user.editor ), method: :patch,  class: 'btn btn-default btn-xs' %>
              <%= link_to 'Make Viewer', set_access_tool_path( @tool, tool_user_id: tool_user.id, approved: tool_user.approved, editor: false ), method: :patch,    class: 'btn btn-default btn-xs' %>
              <%= link_to 'Make Editor', set_access_tool_path( @tool, tool_user_id: tool_user.id, approved: tool_user.approved, editor: true ), method: :patch,     class: 'btn btn-default btn-xs' %>
            </td>
          </tr>
        <% end %>
        <tr><td colspan="5"></td></tr>
        <% User.current.where.not( id: @tool.tool_users.pluck(:user_id) ).order( :last_name, :first_name ).each do |user| %>
          <tr>
            <td>
              <% agreement = user.agreements.first %>
              <% if agreement %>
                <%= status_helper(agreement) %>
                <%= link_to '<span class="glyphicon glyphicon-share-alt"></span>'.html_safe, agreement if current_user.system_admin? %>
              <% end %>
            </td>
            <td><%= image_tag user.avatar_url(18), style: 'vertical-align:text-bottom;min-width:18px' %> <%= user.name %></td>
            <td></td>
            <td></td>
            <td style="white-space:nowrap"><%= link_to 'Create',  create_access_tool_path( @tool, user_id: user.id ), method: :post, class: 'btn btn-default btn-xs' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="col-sm-3">
    <%= render partial: 'documentation/logo_and_admin' %>
    <%= render partial: 'tools/links' %>
  </div>
</div>
