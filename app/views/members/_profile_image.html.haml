.profile
  - if current_user == member
    .profile-image-container2{ rel: "tooltip", data: { title: "Change your picture", container: "body", placement: "bottom" } }
      = link_to settings_path do
        = profile_picture_tag(member, size: "220", style: "width: 220px; height: auto; border-radius: 0 !important;")
  - else
    .profile-image-container2
      = profile_picture_tag(member, size: "220", style: "width: 220px; height: auto; border-radius: 0 !important;")

  %div.overflow-hidden{ style: "margin-left: 20px;margin-right: 20px;margin-bottom: 0;" }
    %strong
      - if current_user&.admin?
        = link_to member.username, member
      - else
        = member.username
    .mb-3
      %small.profile-muted-description
        Joined
        = member.created_at.strftime("%b %Y")
