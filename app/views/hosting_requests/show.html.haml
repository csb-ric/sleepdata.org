- @title = @hosting_request.name

- content_for :body_class do
  brand-background

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = render 'layouts/edit_delete_dropdown', edit_url: edit_hosting_request_path(@hosting_request), delete_url: @hosting_request, delete_confirmation: "Delete #{@hosting_request.name}?"
        = @title
  .breadcrumb-container{ style: 'margin-bottom: 0;' }
    .container
      %ol
        %li= link_to 'Hosting Requests', hosting_requests_path

.dashboard-container
  %table.table.table-striped.table-borderless.table-hover
    %col{ width: '25%' }
    %col{ width: '75%' }
    %tbody
      %tr
        %th.text-right User
        %td= @hosting_request.user.name

      %tr
        %th.text-right Institution Name
        %td= @hosting_request.institution_name

      %tr
        %th.text-right Description
        %td.markdown-container-new= simple_markdown_new(@hosting_request.description)

      %tr
        %th.text-right Reviewed
        %td= simple_check @hosting_request.reviewed?
