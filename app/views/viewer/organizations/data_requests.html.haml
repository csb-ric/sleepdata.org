- @title = "Data Requests - #{@organization.name}"

- render "themes/theme"

- content_for :header, @organization.name
= render "organizations/tabs", organization: @organization

- content_for :breadcrumbs do
  %ol
    %li= link_to "orgs", organizations_path
    %li= link_to @organization.slug, @organization
    %li.breadcrumb-muted data requests

- content_for :sidebar, render("viewer/organizations/sidebar")

.dashboard-container
  %div{ data: { object: "reports-data-requests-chart", title: @chart_title.to_json, series: @series.to_json, x_axis: @x_axis.to_json, y_axis: @y_axis.to_json } }
  .text-center
    = link_to data_requests_organization_path(@organization, year: @year - 1, dataset: @dataset), class: "btn btn-sm btn-light" do
      %i.fa.fa-caret-left
    = @year
    = link_to data_requests_organization_path(@organization, year: @year + 1, dataset: @dataset), class: "btn btn-sm btn-light" do
      %i.fa.fa-caret-right
