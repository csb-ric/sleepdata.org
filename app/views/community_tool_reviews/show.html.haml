- @title = "Review - #{@community_tool.name}"

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        Reviews
  .breadcrumb-container
    .container
      %ol
        %li= link_to @community_tool.name, tool_path(@community_tool)
        %li= render "community_tools/rating", rating: @community_tool.rating

.dashboard-container
  = render "community_tools/rating", rating: @community_tool_review.rating
  %i= @community_tool_review.user.username
  %small.text-muted= @community_tool_review.created_at.strftime("- %b %-d, %Y")
  = simple_markdown(@community_tool_review.review)
