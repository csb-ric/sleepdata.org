- @title = @community_tool.name

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        = @title
  .breadcrumb-container.p-2
    .container
      .float-right
        = render "layouts/draft_published", published: @community_tool.published?
      %ol
        %li= link_to "Tools", community_tools_path
        %li= link_to @community_tool.name, @community_tool
        %li= render "layouts/breadcrumb_edit_delete_dropdown", edit_url: edit_community_tool_path(@community_tool), delete_url: @community_tool, delete_confirmation: "Delete #{@community_tool.name}?"

= render "forms/horizontal/show/generic", title: "URL", content: link_to(@community_tool.url, @community_tool.url)
= render "forms/horizontal/show/generic", title: "User", content: @community_tool.user.name
= render "forms/horizontal/show/generic", title: "Description", content: simple_markdown(@community_tool.description)
