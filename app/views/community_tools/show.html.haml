- @title = @community_tool.name

- content_for :body_class do
  brand-background

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = render 'layouts/edit_delete_dropdown', edit_url: edit_community_tool_path(@community_tool), delete_url: @community_tool, delete_confirmation: "Delete #{@community_tool.name}?"
        = @title
  .breadcrumb-container{ style: 'margin-bottom: 0;' }
    .container
      .pull-right
        = render 'layouts/draft_published', published: @community_tool.published?
      %ol
        %li= link_to 'Tools', community_tools_path

.dashboard-container
  %p
    %strong URL
    = @community_tool.url

  %p
    %strong User
    = @community_tool.user.name

  .markdown-container-new= simple_markdown_new(@community_tool.description)
