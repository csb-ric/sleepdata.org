= form_for @community_tool, html: { class: 'form-horizontal' } do |f|
  - if @community_tool.errors.any?
    .callout.callout-danger
      %strong
        = pluralize @community_tool.errors.count, 'error'
        prohibited this tool from being saved

      %ul
        - @community_tool.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :url, 'URL', class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :url, class: 'form-control'

  .form-group
    = f.label :description, nil, class: 'col-md-2 control-label'
    .col-md-10
      .preview-container
        .preview-header
          = link_to 'Write', '#', data: { object: 'view-content-markdown' }, class: 'preview-tab active', tabindex: '-1'
          = link_to 'Preview', '#', data: { object: 'view-content-preview', content: '#community_tool_description' }, class: 'preview-tab', tabindex: '-1'
        .preview-body
          #content_markdown
            = f.text_area :description, rows: [[5, @community_tool.description.to_s.count("\n") + 1].max, 25].min, class: 'preview-control', data: { object: 'expandable-text-area', default_rows: 5 }
          #content_preview.markdown-container-new{ style: 'display:none' }

  .form-group
    = f.label :status, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.select :status, CommunityTool::STATUS, {}, class: 'form-control'

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: 'btn btn-primary'
      = cancel
