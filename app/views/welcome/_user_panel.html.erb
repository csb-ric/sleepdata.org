<div class="user-panel">
  <%= image_tag user.avatar_url(80, 'identicon'), class: 'img-thumbnail', style: 'min-height:90px;min-width:90px;float:right;margin-left:10px' %>
  <h4><%= user.name %><%= ", <span style='font-size:0.8em'>#{user.degree}</span>".html_safe unless user.degree.blank? %></h4>

  <%= simple_markdown user.research_summary %>
  <div style="clear:both"></div>
</div>
