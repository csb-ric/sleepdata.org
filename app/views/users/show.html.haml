- @title = @user.username

- render "themes/theme"
- content_for :sidebar, render("admin/sidebar")
- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown", edit_url: edit_user_path(@user), delete_url: @user, delete_confirmation: "Delete #{@user.username}?"
  = @title

.dashboard-container
  = render "forms/horizontal/show/generic", title: "Username", content: link_to(@user.username, member_path(@user.username))
  = render "forms/horizontal/show/generic", title: "Email", content: render("users/email", user: @user)
  = render "forms/horizontal/show/generic", title: "Joined", content: @user.created_at&.strftime("%a, %B %d, %Y at %-l:%M:%S %p")
  = render "forms/horizontal/show/generic", title: "Confirmation sent", content: @user.confirmation_sent_at&.strftime("%a, %B %d, %Y at %-l:%M:%S %p")
  = render "forms/horizontal/show/generic", title: "Email confirmed", content: @user.confirmed_at&.strftime("%a, %B %d, %Y at %-l:%M:%S %p")
  = render "forms/horizontal/show/text", object: @user, key: :full_name
  = render "forms/horizontal/show/check_box", object: @user, key: :emails_enabled
  = render "forms/horizontal/show/text", object: @user, key: :profile_bio, key_name: "Bio"
  = render "forms/horizontal/show/text", object: @user, key: :profile_url, key_name: "URL"
  = render "forms/horizontal/show/text", object: @user, key: :profile_location, key_name: "Location"
  = render "forms/horizontal/show/text", object: @user, key: :degree
  = render "forms/horizontal/show/check_box", object: @user, key: :core_member
  = render "forms/horizontal/show/check_box", object: @user, key: :contributor
  = render "forms/horizontal/show/check_box", object: @user, key: :aug_member
  = render "forms/horizontal/show/check_box", object: @user, key: :community_manager
  = render "forms/horizontal/show/markdown", object: @user, key: :research_summary
  = render "forms/horizontal/show/check_box", object: @user, key: :admin
  = render "forms/horizontal/show/check_box", object: @user, key: :shadow_banned
  = render "forms/horizontal/show/check_box", object: @user, key: :spammer
  = render "forms/horizontal/show/generic", title: "Profile picture", content: profile_picture_tag(@user)
  = render "forms/horizontal/show/generic", title: "Data requests", content: render("users/data_requests", user: @user)
  = render "forms/horizontal/show/generic", title: "Downloads", content: render("users/downloads", user: @user)
