- @title = "Edit Organization: #{@organization.name_was}"

- render "themes/theme"
- content_for :header, @organization.name_was
= render "organizations/tabs", organization: @organization

- content_for :breadcrumbs do
  %ol
    %li= link_to "orgs", organizations_path
    %li= link_to @organization.slug_was, @organization
    %li.breadcrumb-muted edit

- content_for :sidebar, render("editor/organizations/sidebar")

.dashboard-container= render "organizations/form", organization: @organization
