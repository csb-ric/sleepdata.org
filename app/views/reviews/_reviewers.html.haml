- agreement.reviews.each do |review|
  - case review.approved when true
    - fa = "fa-thumbs-up"
    - badge = "badge-success"
  - when false
    - fa = "fa-thumbs-down"
    - badge = "badge-danger"
  - else
    - fa = "fa-bolt"
    - badge = "badge-light"
  %span.badge{ class: badge }
    = review.user.initials
    %i.fa{ class: fa }
  &nbsp;
