- if ENV["survey_url"].present? && cookies[:survey_url_closed] != "1"
  #service-announcement.bg-dark
    .container
      .py-1.small.text-white.text-center
        %i.fa.fa-info-circle
        Please fill out our
        = succeed "." do
          = link_to "short survey", ENV["survey_url"], data: { object: "service-announcement-link", cookies: "survey_url_closed" }

        .float-right
          = link_to "#", data: { object: "service-announcement", cookie: "survey_url_closed", days: 14 }, class: "text-white no-underline" do
            &cross;
- elsif cookies[:privacy_policy_closed] != "1" && false
  #service-announcement.bg-dark
    .container
      .py-1.small.text-white.text-center
        %i.fa.fa-info-circle
        We've updated our
        = succeed "." do
          = link_to "privacy policy", privacy_policy_path, data: { object: "service-announcement-link", cookies: "privacy_policy_closed" }

        .float-right
          = link_to "#", data: { object: "service-announcement", cookie: "privacy_policy_closed", days: 14 }, class: "text-white no-underline" do
            &cross;
