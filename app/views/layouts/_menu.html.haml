- if false
  - header = current_page?(root_path) || content_for?(:header_old) || current_page?(landing_no_header_path)
  %div{ class: header ? 'navbar-outer' : nil }
    %nav.navbar.navbar-default{ class: (header ? nil : 'navbar-fixed-top affix'), data: { object: (header ? 'navbar-affix' : nil) } }
      .container
        .navbar-header
          %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '.navbar-full-menu' } }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'NSRR', root_path, class: 'navbar-brand brand navbar-hide-scrolled'
          - if @menu_title || @title
            = link_to '#top', data: { object: 'remove-collapse-in scroll-anchor', target: '.navbar-full-menu' }, class: 'navbar-brand navbar-show-scrolled' do
              %i.fa.fa-level-up.fa-flip-horizontal{ aria: { hidden: 'true' } }
              = @menu_title || @title
        #menu-body.collapse.navbar-collapse.navbar-full-menu
          = render "layouts/menu_body"

- else
  .background-special
    %nav.navbar.navbar-expand-lg.navbar-dark.color-overlay2
      .container
        - if false
          = link_to landing_path, class: "navbar-brand" do
            NSRR
        - else
          = render "layouts/logo"

        %button.navbar-toggler{ type: "button", data: { toggle: "collapse", target: "#menu-body" }, aria: { controls: "menu-body", expanded: "false", label: "Toggle navigation" } }
          %span.navbar-toggler-icon

        #menu-body.collapse.navbar-collapse
          = render "layouts/menu_body"
