- if ENV["survey_url"].present?
  - content_for :service_announcement do
    - unless cookies[:hide_service_announcement] == "1"
      #service-announcement.bg-dark
        .container
          .py-1.small.text-white.text-center
            %i.fa.fa-info-circle
            Please fill out our
            = succeed "." do
              = link_to "short survey", ENV["survey_url"]

            .float-right
              = link_to "#", data: { object: "hide-service-announcement" }, class: "text-white no-underline" do
                &cross;
