- content_for :header_old do
  .logo-header
    .call-to-action
      .call-to-action-header.brand
        National Sleep Research Resource
      .call-to-action-body
        Free research data and tools.

- content_for :body_class do
  brand-background

.landing-sentence
  What interests you?
.landing-box-container
  .landing-box
    .landing-face.landing-back
      .landing-box-header= link_to 'Adults', datasets_path
      %p These are for people 18 and over.
    .landing-face.landing-front
      .landing-box-header= link_to 'Adults', datasets_path
      %p.center.nowrap
        %i.fa.fa-male.icon-lg{ aria: { hidden: 'true' } }
        %i.fa.fa-female.icon-lg{ aria: { hidden: 'true' } }
  .landing-box
    .landing-face.landing-back
      .landing-box-header= link_to 'Children', datasets_path
      %p
        About the children.
    .landing-face.landing-front
      .landing-box-header= link_to 'Children', datasets_path
      %p.center.nowrap
        %i.fa.fa-child.icon-child-sm{ aria: { hidden: 'true' } }
        %i.fa.fa-child.icon-child-md{ aria: { hidden: 'true' } }
        %i.fa.fa-child.icon-child-lg{ aria: { hidden: 'true' } }
  .landing-box
    .landing-face.landing-back
      .landing-box-header= link_to 'Phenotypes', datasets_path
      %p CSVs, covariates, etc!
    .landing-face.landing-front
      .landing-box-header= link_to 'Phenotypes', datasets_path
      %p.center
        %i.fa.fa-table.icon-lg{ aria: { hidden: 'true' } }
  .landing-box
    .landing-face.landing-back
      .landing-box-header= link_to 'Polysomnography', datasets_path
      %p PSGs, EEGs, ECGs.
    .landing-face.landing-front
      .landing-box-header= link_to 'Polysomnography', datasets_path
      %p.center
        %i.fa.fa-heartbeat.icon-lg{ aria: { hidden: 'true' } }
  .landing-box
    .landing-face.landing-back
      .landing-box-header= link_to 'Actigraphy', datasets_path
      %p
        Watches, activity, wearables.
    .landing-face.landing-front
      .landing-box-header= link_to 'Actigraphy', datasets_path
      %p.center
        %i.fa.fa-clock-o.icon-lg{ aria: { hidden: 'true' } }
.landing-sentence
  Not sure? View our
  = link_to 'most popular', datasets_path
  datasets.

- content_for :call_to_action do
  %div{ style: 'background-color: #c8e6c9;padding-top: 10px;' }
    .container
      %i.fa.fa-tool.icon-lg{ aria: { hidden: 'true' } }
      .landing-sentence
        Want to do more with the data? We've got
        = link_to 'tools', tools_path
        for that.
      .landing-box-container
        .landing-box
          .landing-face.landing-face-unstyled
            .landing-box-header EDF Visualization
            %ul.list-unstyled
              %li.nowrap.overflow-hidden Altamira
              %li.nowrap.overflow-hidden EDF Viewer
              %li.nowrap.overflow-hidden
                = link_to 'https://www.physionet.org/pn4/sleep-edfx/Polyman/' do
                  Polyman
                  %span.glyphicon.glyphicon-new-window
              %li.nowrap.overflow-hidden
                = link_to 'http://www.teuniz.net/edfbrowser/' do
                  EDFbrowser
                  %span.glyphicon.glyphicon-new-window
        .landing-box
          .landing-face.landing-face-unstyled
            .landing-box-header Signal Processing
            %ul.list-unstyled
              %li.nowrap.overflow-hidden SpiSOP
              %li.nowrap.overflow-hidden Data Chromatix
              %li.nowrap.overflow-hidden SpectralTrainFig

        .landing-box
          .landing-face.landing-face-unstyled
            .landing-box-header Popular
            %ul.list-unstyled
              - CommunityTool.current.where(published: true).where.not(rating: nil).order('rating desc nulls last').limit(3).each do |community_tool|
                %li.nowrap.overflow-hidden= link_to community_tool.name, community_show_tool_path(community_tool)

        .landing-box
          .landing-face.landing-face-unstyled
            .landing-box-header Newest
            %ul.list-unstyled
              - CommunityTool.current.where(published: true).order(publish_date: :desc).limit(3).each do |community_tool|
                %li.nowrap.overflow-hidden= link_to community_tool.name, community_show_tool_path(community_tool)

        .landing-box
          .landing-face.landing-face-unstyled
            .landing-box-header Tutorials
            %ul.list-unstyled
              %li.nowrap.overflow-hidden= link_to 'Get Started Scripting', community_show_tool_path('ruby-scripts-tutorial-01')
              %li.nowrap.overflow-hidden= link_to 'All Tutorials', tools_path(type: 'tutorial')

      .landing-sentence
        Know of another great tool?
        = link_to 'Tell us about it.', contribute_tool_start_path

  %div{ style: 'background-color: #e8f5e9;' }
    .container
      %h3{ style: 'font-weight: bold' } Blog
      - Broadcast.current.published.where(archived: false).order(pinned: :desc, publish_date: :desc).limit(9).each do |broadcast|
        .dashboard-container{ style: 'border: 0' }
          %h2.broadcast-title= link_to broadcast.title, blog_post_path(broadcast.url_hash)
          = render 'blog/extract', broadcast: broadcast

  .landing-sentence.landing-sentence-gradient
    .container
      A
      = link_to 'NHLBI', 'https://www.ncbi.nlm.nih.gov/pubmed/27070134', class: 'brand'
      resource for the sleep research community.
  .landing-stats
    .container{ style: 'padding: 20px;' }
      .row
        .col-sm-3
          .center
            %span.glyphicon.glyphicon-hdd.icon-xl
        .col-sm-3
          .center.hidden-sm.hidden-md.hidden-lg
            %h1.brand 4.1 TB
            Stored on the Resource
          .hidden-xs
            %h1.brand 4.1 TB
            Stored on the Resource
        .col-sm-3.hidden-xs
          .center.hidden-sm.hidden-md.hidden-lg
            %h1.brand 60 TB
            Shared with Researchers
          .hidden-xs{ style: 'text-align: right;'}
            %h1.brand 60 TB
            Shared with Researchers
        .col-sm-3.hidden-xs
          .center
            %span.glyphicon.glyphicon-globe.icon-xl

- if false
  .row
    .col-md-9

      = render 'external/datasets'

      = render 'external/variables'

      = render 'external/tools'

    .col-md-3
      = render 'news/news', limit: 7

- if false
  - content_for :call_to_action do
    .call-to-action
      .call-to-action-header
        Start your research today!

      - if current_user
        .call-to-action-body
          Complete a Data Access and Use Agreement to download data.

        %div.center{ style: 'margin-top:20px;margin-bottom:20px' }
          = link_to 'My DAUAs', submissions_path, class: 'btn btn-call-to-action btn-lg btn-shadow'
      - else
        .call-to-action-body
          Complete a Data Access and Use Agreement to download data.

        %div.center{ style: 'margin-top:20px;margin-bottom:20px' }
          = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-call-to-action btn-lg btn-shadow'
