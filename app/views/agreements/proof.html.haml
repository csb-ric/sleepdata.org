= render 'agreements/wizard/daua_progress'

%p.lead.center
  Please proofread your application and then click "Submit" to complete Data
  Access Request.


- steps = (1..5)

- steps.each do |step|
  .dashboard-container
    %div{ style: 'font-size: 20px;border-bottom: 1px solid #ededed;padding-bottom: 10px;margin-bottom: 20px;' }
      Step
      = step
      = link_to "Edit Step #{step}", step_agreement_path(@agreement, step: step), class: 'btn btn-sm btn-primary btn-shadow'

    - unless @agreement.step_valid?(step)
      .text-danger{ style: 'margin-bottom: 20px;' }
        %strong Attention
        This step is not complete. Please edit the missing information.

    = render "agreements/proof/step#{step}"

= form_for @agreement, url: final_submission_agreement_path(@agreement), method: :patch, html: { class: 'form-horizontal', id: 'final_submission_form' } do |f|
  .row
    .col-sm-6
      = link_to submissions_path, class: 'btn btn-lg btn-light btn-block' do
        %i.fa.fa-caret-left
        Back to Submissions
    .col-sm-6
      - if @agreement.fully_filled_out?
        = link_to '#', data: { object: 'submit-and-disable', target: '#final_submission_form' }, class: 'btn btn-lg btn-primary btn-block' do
          %i.fa.fa-cloud-upload
          Submit Application
      - else
        = link_to '#', data: { object: 'suppress-click' }, class: 'btn btn-lg btn-warning btn-block disabled', disabled: true do
          %i.fa.fa-exclamation-triangle
          Complete All Steps Before Submitting
