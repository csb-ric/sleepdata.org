- @title = 'Change your password'

- content_for :body_class do
  brand-background

%h1.brand= @title

.content-spacer

.sign-up-form
  .sign-up-form-title
    Change Password

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f|
    - if resource.errors.any?
      .bs-callout.bs-callout-danger
        %strong
          The following
          = 'error'.pluralize(resource.errors.count)
          prevented your password from being changed

        %ul
          - resource.errors.full_messages.each do |msg|
            %li= msg

    = f.hidden_field :reset_password_token

    .form-group
      = f.label :password, "New password", class: 'control-label'
      = f.password_field :password, class: 'form-control'

    .form-group
      = f.label :password_confirmation, "Confirm new password", class: 'control-label'
      = f.password_field :password_confirmation, class: 'form-control'

    .form-group
      = f.submit "Change my password", class: 'btn btn-success'
