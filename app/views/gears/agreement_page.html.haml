.container-fluid
  .row.flex-xl-nowrap
    = render "gears/legal_document_menu"

    #agreement-helper-drawer.d-none.d-xl-block.col-xl.sidebar-drawer

    %main.col-12.col-md-9.col-xl-8.pl-md-5{ role: "main" }
      .page-box.last-box
        #width-test{ style: "position: fixed;top: 0;overflow: hidden;height: 0" }

        .agreement-heading= @final_legal_document_page.title

        #remove-extra-div= legal_markdown @final_legal_document_page

        .mt-5.mb-3.float-right
          = succeed " " do
            = link_to dashboard_path, class: "btn btn-light", tabindex: "-1" do
              %i.fa.fa-save
              Save Draft

          = link_to agreement_page_path(page: params[:page].to_i + 1, dataset_id: @dataset, legal_document_id: @final_legal_document.legal_document), class: "btn btn-primary" do
            Proceed
            %i.fa.fa-caret-right
