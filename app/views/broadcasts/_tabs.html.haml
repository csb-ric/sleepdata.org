- content_for :tabs do
  - current_page = params[:controller].in?(%w(blog))
  = link_to blog_path, class: "link-unstyled d-inline-block px-3 pt-2 pb-2 rounded-top header-tab #{"border border-bottom-0 header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(blog_path)}" } do
    = icon("fas", "rss")
    Live Blog
  - current_page = params[:controller].in?(%w(broadcasts))
  = link_to broadcasts_path, class: "link-unstyled d-inline-block px-3 pt-2 pb-2 rounded-top header-tab #{"border border-bottom-0 header-tab-active" if current_page}", data: { object: "#{"suppress-click" if current_page?(broadcasts_path)}" } do
    = icon("fas", "pencil-alt")
    Articles
