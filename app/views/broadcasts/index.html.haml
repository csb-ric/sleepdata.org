- @title = 'Blog Posts'

- content_for :banner do
  .banner
    .container
      .banner-header.brand
        Blog Posts
      .banner-body
        = link_to new_broadcast_path, class: 'btn btn-xs btn-default' do
          %span.glyphicon.glyphicon-plus
          New Blog Post

%table.table
  %thead
    %tr
      %th Published
      %th Title
      %th Short Description
      %th Publish date
      %th Pinned
      %th Archived
      %th User
      %th Actions

  %tbody
    - @broadcasts.each do |broadcast|
      %tr
        %td= simple_check broadcast.published
        %td= link_to broadcast.title, broadcast
        %td= broadcast.short_description
        %td= broadcast.publish_date.strftime '%a %d %b %Y'
        %td= simple_check broadcast.pinned
        %td= simple_check broadcast.archived
        %td= broadcast.user.name
        %td
          = link_to 'Edit', edit_broadcast_path(broadcast), class: 'btn btn-xs btn-default'
          = link_to 'Destroy', broadcast, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger-inverse'

.center= paginate @broadcasts, theme: 'contour'
