- @title = @broadcast.title

- content_for :body_class do
  brand-background

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = render 'layouts/edit_delete_dropdown', edit_url: edit_broadcast_path(@broadcast), delete_url: @broadcast, delete_confirmation: "Delete #{@broadcast.title}?"
        = @title
  .breadcrumb-container{ style: 'margin-bottom: 0;' }
    .container
      .pull-right
        - if @broadcast.published?
          - if @broadcast.publish_date <= Time.zone.today
            %span.label.label-info Published
            = link_to 'View Blog Post', blog_post_path(@broadcast.url_hash), class: 'btn btn-xs btn-default'
          - else
            %span.label.label-info
              Set to Publish on
              = @broadcast.publish_date.strftime('%a, %B %-d, %Y')
        - else
          %span.label.label-warning DRAFT
      %ol
        %li= link_to 'Blog Posts', broadcasts_path

.dashboard-container.box-shadow
  .row
    .col-sm-9
      .broadcast
        = simple_markdown @broadcast.description, false

    .col-sm-3
      %p
        %strong Short Description
        %br
        = @broadcast.short_description

      %p
        %strong Keywords
        %br
        = @broadcast.keywords

      %p
        %strong Creator
        %br
        = @broadcast.user.name

      %p
        %strong Publish date
        %br
        = @broadcast.publish_date

      %p
        %strong Pinned
        %br
        = simple_check @broadcast.pinned

      %p
        %strong Archived
        %br
        = simple_check @broadcast.archived
