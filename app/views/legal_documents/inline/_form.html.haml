- if @agreement
  - agreement_variable = @agreement.agreement_variables.find_by(final_legal_document_variable_id: variable.id)
  - value = (agreement_variable ? agreement_variable.value : "")
- else
  - value = ""

- case variable.variable_type
- when "checkbox"
  = render "legal_documents/outline/check_box", variable: variable, editable: editable, value: value
- else
  = render "legal_documents/inline/string", variable: variable, editable: editable, value: value
  = render "legal_document_variables/edit_link", variable: variable if editable
