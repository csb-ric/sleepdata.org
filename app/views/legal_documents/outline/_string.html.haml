- key = variable.name
- label = variable.display_name_label
- help_element = key
- help_text = label || key.titleize
- placeholder = ""

.form-group
  = label_tag key, class: "form-control-label" do
    = label
    = render "legal_document_variables/edit_link", variable: variable if editable
  - if reviewer
    .legal-document-variable-review{ style: "min-height: 2.25rem;" }= value
  - else
    = text_field_tag key, value, class: "form-control input-expandable", placeholder: placeholder, data: { object: "text-input-expandable", help_element: help_element, help_text: help_text }, disabled: editable
    - if variable.field_note.present?
      %small.text-muted= variable.field_note
