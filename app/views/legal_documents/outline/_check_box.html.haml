- key = variable.name
- label = variable.display_name_label
- help_element = key
- help_text = label || key.titleize

.form-group
  = label_tag key, class: "form-control-label" do
    = label
    = render "legal_document_variables/edit_link", variable: variable if editable
  %br
  - if reviewer
    .legal-document-variable-review
      - if value == "1"
        %i.fa.fa-check-square.text-primary
      - else
        %i.fa.fa-times.text-danger
      - if variable.description.present?
        %span.custom-control-description= variable.description
  - else
    = label_tag key, class: "custom-control custom-checkbox" do
      = hidden_field_tag key, "0", id: "#{key}_no"
      = check_box_tag key, "1", value == "1", class: "custom-control-input", id: key, data: { object: "text-input-expandable", help_element: help_element, help_text: help_text }, disabled: editable
      %span.custom-control-indicator
      - if variable.description.present?
        %span.custom-control-description= variable.description
  - if variable.field_note.present?
    %br
    %small.text-muted= simple_markdown variable.field_note
