= form_with model: [@organization, legal_document], local: true do |form|
  = render "forms/horizontal/text_field", form: form, object: legal_document, key: :name, slug: "slug"
  = render "forms/horizontal/slug_field", form: form, object: legal_document, key: :slug
  = render "forms/horizontal/select", form: form, object: legal_document, key: :commercial_type, options: LegalDocument::COMMERCIAL_TYPES
  = render "forms/horizontal/select", form: form, object: legal_document, key: :data_user_type, options: LegalDocument::DATA_USER_TYPES
  = render "forms/horizontal/select", form: form, object: legal_document, key: :attestation_type, options: LegalDocument::ATTESTATION_TYPES
  = render "forms/horizontal/select", form: form, object: legal_document, key: :approval_process, options: LegalDocument::APPROVAL_PROCESS_TYPES
  = render "forms/horizontal/submit", form: form, object: [@organization, legal_document]
