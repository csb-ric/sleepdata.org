- @title = "Edit Tool: #{@tool.name_was}"

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        = @tool.name_was
  .breadcrumb-container.p-2
    .container
      %ol
        %li= link_to "Tools", admin_tools_path
        %li= link_to @tool.name_was, admin_tool_path(@tool)
        %li Edit

= render "admin/tools/form", tool: @tool
