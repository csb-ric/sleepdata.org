- @title = "Review - #{@tool.name}"

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        Reviews
  .breadcrumb-container
    .container
      %ol
        %li= link_to @tool.name, tool_path(@tool)
        %li= render "tools/rating", rating: @tool.rating

.dashboard-container
  = render "tools/rating", rating: @tool_review.rating
  %i= @tool_review.user.username
  %small.text-muted= @tool_review.created_at.strftime("- %b %-d, %Y")
  = simple_markdown(@tool_review.review)
