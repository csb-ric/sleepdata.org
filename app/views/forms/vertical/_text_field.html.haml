- data = {}
- data = { object: "create-slug", target: "##{object.class.to_s.downcase}_#{slug}" } if defined?(slug) && object.new_record?
.form-group
  = form.label key, defined?(key_name) ? key_name : nil, class: "form-control-label"
  = form.text_field key, class: "form-control#{" is-invalid" if object.errors[key].present?}", data: data, placeholder: defined?(placeholder) ? placeholder : nil
  - if defined?(key_name)
    = render "layouts/invalid_feedback", object: object, key: key, key_name: key_name
  - else
    = render "layouts/invalid_feedback", object: object, key: key
  = render "forms/help_text", help_text: help_text if defined?(help_text)
