.beta-container
  .main-container.dark-texture
    %h1 Flow Limitation Challenge
    %p.wow.flipInX
      Review Answers


  %a.anchor-top{ name: 'download-data' }
  .main-container.grid-texture

    %h2
      My Answers

    %p
      Here are the answers you provided for this challenge. Please review them, and then either go back and edit, or submit your responses. You will no longer be able to edit your responses after submitting.

    .center{ style: 'width:100%;margin-top:40px;' }
      = image_tag 'challenges/flow-limitation-letters.png', class: 'img-thumbnail'



    %p{ style: 'margin-top:40px'}
      = link_to 'A - Flow Limited?', flow_limitation_challenge_step1_path
    %p{ style: 'margin-left: 20px;'}
      %strong Yes


    %p
      = link_to 'B - Flow Limited?', flow_limitation_challenge_step2_path
    %p{ style: 'margin-left: 20px;'}
      %strong Intermediate


  %a.anchor-top{ name: 'submit-responses' }
  .main-container.call-to-action

    %h2.center
      Last step, make sure to submit your answers!

    .center{ style: 'margin-top:20px;margin-bottom:20px' }
      = link_to 'Submit My Answers', flow_limitation_challenge_submitted_path, class: 'btn btn-call-to-action btn-lg'
