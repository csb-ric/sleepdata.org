%td
  %i.fa.fa-database{ class: notification.read? ? "text-muted" : "text-primary", aria: { hidden: "true" } }

%td.nowrap{ class: "#{"text-muted" if notification.read?}" }
  .overflow-hidden
    = link_to notification, class: "#{notification.read? ? "link-muted" : "link-unstyled" }" do
      = strip_tags(simple_markdown(notification.hosting_request.description)).html_safe

%td.d-none.d-md-table-cell
  = profile_picture_tag notification.hosting_request.user, size: 18
