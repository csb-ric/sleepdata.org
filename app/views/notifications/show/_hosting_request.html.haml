%td
  %i.fa.fa-database{ aria: { hidden: 'true' }, class: "#{notification.read? ? 'text-muted' : 'text-primary'}" }

%td.nowrap{ class: "#{'text-muted' if notification.read?}" }
  .overflow-hidden
    = link_to notification, class: "#{notification.read? ? 'link-muted' : 'link-unstyled' }" do
      = strip_tags(simple_markdown_new(notification.hosting_request.description)).html_safe

%td.hidden-xs
  = image_tag notification.hosting_request.user.avatar_url(18, 'identicon'), size: '18x18', alt: ''
