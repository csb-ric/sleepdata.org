%td
  %i.fa.fa-star-half-o{ class: "#{notification.read? ? 'text-muted' : 'text-warning'}" }

%td.nowrap{ class: "#{'text-muted' if notification.read?}" }
  .overflow-hidden
    = link_to notification, class: "#{notification.read? ? 'link-muted' : 'link-unstyled' }" do
      = strip_tags(simple_markdown_new(notification.community_tool_review.review)).html_safe

%td.hidden-xs
  = image_tag notification.community_tool_review.user.avatar_url(18, 'identicon'), size: '18x18', alt: ''
