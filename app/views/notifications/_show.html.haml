- if notification.reply
  = render 'notifications/show/reply', notification: notification
- elsif notification.community_tool_review
  = render 'notifications/show/community_tool_review', notification: notification
- elsif notification.dataset_review
  = render 'notifications/show/dataset_review', notification: notification
- elsif notification.hosting_request
  = render 'notifications/show/hosting_request', notification: notification
- else
  %td{ colspan: 3 }

%td.text-muted.hidden-xs
  %small
    = time_ago_in_words notification.created_at
    ago

%td
  - unless notification.read?
    = link_to notification_path(notification, notification: { read: true }), method: :patch, remote: true, class: 'text-muted' do
      %i.fa.fa-check
