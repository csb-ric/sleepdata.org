- @title = "Forgot your password?"

- content_for :body_class do
  brand-background

%p.lead.center= @title

.sign-up-form
  .sign-up-form-title
    Reset Password

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-vertical" }) do |form|
    .form-group
      = render "layouts/label_or_errors", form: form, object: resource, key: :email
      = form.email_field :email, class: "form-control"

    .form-group.submit-btn-container
      = form.submit "Send me reset password instructions", class: "btn btn-primary btn-block btn-shadow"
