- @title = 'Forgot your password?'

- content_for :body_class do
  brand-background

%p.lead.center= @title

.sign-up-form
  .sign-up-form-title
    Reset Password

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-vertical' }) do |f|
    .form-group
      = render 'layouts/label_or_errors', f: f, object: resource, key: :email
      = f.email_field :email, class: 'form-control'

    .form-group.submit-btn-container
      = f.submit 'Send me reset password instructions', class: 'btn btn-primary btn-block btn-shadow'
