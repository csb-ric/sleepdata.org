%p{ style: p_style }
  Dear
  = succeed ',' do
    = @admin.first_name

- case @agreement.status when 'approved'
  %p{ style: p_style }
    = succeed "'s" do
      = @agreement.user.name
    DAUA has been
    %span{ style: success_style } approved
    by
    = succeed '.' do
      = @last_user.name if @last_user
- when 'resubmit'
  %p{ style: p_style }
    = @agreement.user.name
    has been asked to
    %span{ style: danger_style } resubmit
    the DAUA
    by
    = succeed '.' do
      = @last_user.name if @last_user

  %blockquote{ style: blockquote_style }= @agreement.comments
- else
  %p{ style: p_style }
    = succeed "'s" do
      = @agreement.user.name
    DAUA status has been changed to
    %span{ style: default_style }= @agreement.status
    by
    = succeed '.' do
      = @last_user.name if @last_user

%p{ style: p_style }
  You can review the DAUA here:

%p{ style: center_style }
  = link_to "#{ENV['website_url']}/reviews/#{@agreement.id}", "#{ENV['website_url']}/reviews/#{@agreement.id}", style: link_style
