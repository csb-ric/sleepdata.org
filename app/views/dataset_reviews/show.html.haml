- @title = "Review - #{@dataset.name}"

- content_for :banner do
  .dataset-banner
    .container
      .dataset-header.brand
        Reviews
  .breadcrumb-container
    .container
      %ol
        %li= link_to @dataset.name, @dataset
        %li= render 'datasets/rating', rating: @dataset.rating

= render 'datasets/rating', rating: @dataset_review.rating
%i= @dataset_review.user.forum_name
= simple_markdown @dataset_review.review
