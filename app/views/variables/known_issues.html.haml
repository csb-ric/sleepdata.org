- @title = "#{@variable.name.upcase} - #{@dataset.slug.upcase} Variables"

= render 'variables/header'

.row
  .col-md-3
    = render 'variables/menu'
  .col-md-9
    %h1.variable-header.brand Known Issues

    - if @variable.known_issues.count > 0
      = simple_markdown @variable.known_issues.join("\n")
    - else
      %p.lead This variable has no known issues.
