= render 'variables/header'

.row
  .col-sm-3
    = render 'variables/menu'
  .col-sm-9
    - download_url = files_dataset_path(@dataset) + "/forms/#{@form.folder}?f=#{CGI::escape @form.code_book.to_s}"
    - inline_url = files_dataset_path(@dataset) + "/m/browser/forms/#{@form.folder}/#{@form.code_book}?inline=1"

    - if @form.pdf?
      .embed-responsive{ style: 'padding-bottom: 100.00%;' }
        %object.white-background{ data: inline_url, type: 'application/pdf' }
          alt :
          = link_to @form.display_name, download_url, class: 'btn btn-xs btn-default'
    - elsif @form.image?
      .center{ style: 'margin-bottom: 20px' }
        = image_tag inline_url, style: 'max-width: 100%'
    - else
      = link_to @form.display_name, download_url, class: 'btn btn-xs btn-default'
