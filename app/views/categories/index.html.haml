- @title = 'Categories'

- content_for :banner do
  .banner
    .container
      .banner-header.brand
        = @title
      .banner-body
        = link_to 'Create Category', new_category_path, class: 'btn btn-xs btn-primary'


= render 'contour/layouts/per_page', per_page: 40, object_count: @categories.total_count

%table.table.table-striped.table-fixed
  %thead
    %tr
      = th_sort_field @order, 'categories.name', 'Name'
      = th_sort_field @order, 'categories.slug', 'Slug'
      %th Actions

  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category
        %td
          %code= category.slug
        %td.nowrap
          = link_to 'Edit', edit_category_path(category), class: 'btn btn-xs btn-default'
          = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger-inverse'

.center= paginate @categories, theme: 'contour'
