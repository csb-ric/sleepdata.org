- @title = @category.name

- render "themes/theme"
- content_for :sidebar, render("admin/sidebar")
- content_for :header, @title

- content_for :breadcrumbs do
  %ol
    %li= link_to "Categories", categories_path
    %li= @category.name
    %li
      .dropdown.dropdown-sm.d-inline-block
        = link_to "#", class: "btn btn-light btn-sm dropdown-toggle", data: { toggle: "dropdown" } do
          .d-inline-block.d-sm-none
            %i.fa.fa-cog
          .d-none.d-sm-inline-block Actions
          %strong.caret

        .dropdown-menu
          = link_to edit_category_path(@category), class: "dropdown-item" do
            %i.fa.fa-pencil
            Edit
          .dropdown-divider
          = link_to @category, method: :delete, data: { confirm: "Delete #{@category.name}?" }, class: "dropdown-item text-danger" do
            %i.fa.fa-trash
            Delete



.dashboard-container.dashboard-table
  %table.table.table-striped.table-borderless.table-sticky
    %col{ width: "25%" }
    %col{ width: "75%" }
    %tbody
      %tr
        %th.text-right Name
        %td= @category.name

      %tr
        %th.text-right Slug
        %td
          %code= @category.slug
