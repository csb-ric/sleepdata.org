- @title = @category.name

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .float-right
          = render "layouts/edit_delete_dropdown", edit_url: edit_category_path(@category), delete_url: @category, delete_confirmation: "Delete #{@category.name}?"
        = @title
  .breadcrumb-container
    .container
      %ol
        %li= link_to "Categories", categories_path

.dashboard-container
  %table.table.table-striped.table-borderless.table-hover
    %col{ width: "25%" }
    %col{ width: "75%" }
    %tbody
      %tr
        %th.text-right Name
        %td= @category.name

      %tr
        %th.text-right Slug
        %td
          %code= @category.slug
