- @title = "Exports"

- render "themes/theme"
- content_for :header do
  .float-right
    = link_to plus_or("New Export"), new_export_path, class: "btn btn-primary btn-shadow"
  = @title
= render "admin/tabs"
- content_for :sidebar, render("admin/sidebar")

- if @exports.present?
  .dashboard-container.dashboard-table
    %table.table.table-striped.table-borderless.table-sticky
      %col
      %col
      %col{ width: "1px" }
      %thead
        %tr
          %th Name
          %th Status
          %th.text-center
            .d-none.d-sm-inline-block Actions

      %tbody
        - @exports.each do |export|
          %tr
            %td= link_to export.name, export
            %td= export_status_helper(export)
            %td= render "layouts/edit_delete_dropdown", edit_url: edit_export_path(export), delete_url: export, delete_confirmation: "Delete #{export.name}?"

  .center-horizontally= paginate @exports, theme: "bootstrap"
- else
  .jumbotron.jumbotron-custom-text
    = icon("far", "clone", class: "mr-1")
    No exports found.
    = link_to "Start over", exports_path if params[:search].present?
