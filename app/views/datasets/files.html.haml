- @title = "#{@dataset.slug.upcase} Files"

- content_for :header, @dataset.name_was
- content_for :header_append, render("datasets/header")

- if current_page?([:files, @dataset])
  - content_for :header_append do
    .d-flex.justify-content-center.data-request-tab-sticky
      .data-request-tab-background
        = render "datasets/request", dataset: @dataset

- path = params[:path]
- page = [params[:page].to_i - 1, 0].max

- content_for :breadcrumbs do
  #breadcrumb= render "datasets/files_breadcrumb", path: path, page: page, file_count: @dataset_files.total_count

- if @root_dataset_file && @root_dataset_file.description.present?
  .markdown-container.folder-callout
    = highlight(simple_markdown(@root_dataset_file.description, target_blank: false, table_class: "table table-striped table-hover"), @term, sanitize: false)

#folder= render "dataset_files/folder", path: path
