<% if current_user and @dataset.editors.pluck(:id).include?(current_user.id) %>
  <div class="pull-right">
    <ul class="pagination pagination-sm" style="margin-top:3px;margin-bottom:0px;margin-right:3px">
      <% if @dataset.current_folder_locked?(path) %>
        <li class="disabled"><%= link_to '<i class="fa fa-refresh fa-spin"></i> Indexing...'.html_safe, '#', data: { object: 'suppress-click' } %></li>
      <% else %>
        <li><%= link_to '<span class="glyphicon glyphicon-refresh"></span> Refresh'.html_safe, reset_index_dataset_path(@dataset, path: path), method: :post, data: { confirm: 'Are you sure you want to reset this folder index?' } %></li>
      <% end %>
    </ul>
  </div>
<% end %>
