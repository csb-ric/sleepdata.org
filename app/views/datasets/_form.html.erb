<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @dataset, html: { class: 'form-horizontal' } do |f| %>
  <% if @dataset.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@dataset.errors.count, "error") %> prohibited this dataset from being saved</h4>

      <ul>
      <% @dataset.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :slug, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :slug, class: 'form-control' %>
      <div class="bs-callout bs-callout-info">
        <h4>Naming convention</h4>

        <ul>
          <li>Must be a lowercase letter <code>a-z</code> followed by lowercase letters <code>a-z</code>, numbers<code>0-9</code>, or dashes<code>-</code>.</li>
        </ul>
        Ex: <code>abc123-trial</code>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :logo, 'Logo (JPG, GIF, PNG)', class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.file_field :logo, class: 'form-control' %>
      <%= f.hidden_field :logo_cache %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :git_repository, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :git_repository, class: 'form-control' %>
      <div class="bs-callout bs-callout-info">
        <h4>Repository must be Public</h4>
        <ul><li>The repository must be publicly accessible.</li></ul>
        Ex: <code>https://github.com/&lt;repository-name&gt;.git</code>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :public %> Public Documentation
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :all_files_public %> Set All Files Public
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :release_date, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :release_date, class: 'datepicker form-control', value: @dataset.release_date ? @dataset.release_date.strftime('%m/%d/%Y') : '' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>
  </div>
<% end %>
