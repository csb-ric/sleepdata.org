.colorselector {
  position: absolute;
	top: 0;
	left: 0;
	width: 36px;
	height: 36px;
	background: url(colorpicker/select2<%= asset_path('colorpicker/select2.png').split('select2').last %>);
}
.colorselector div {
  position: absolute;
	top: 4px;
	left: 4px;
	width: 28px;
	height: 28px;
	background: url(colorpicker/select2<%= asset_path('colorpicker/select2.png').split('select2').last %>) center;
}
